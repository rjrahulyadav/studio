rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // The UID of the designated administrator.
    let ADMIN_UID = '9Vl6oTot93b9TH442xYCDLbMLs32';

    // Checks if a user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Checks if the authenticated user is the designated administrator.
    function isAdmin() {
      return isSignedIn() && request.auth.uid == ADMIN_UID;
    }

    // --- Rules for Training Modules ---
    // Anyone can view the list of training modules.
    // Only the admin can create, update, or delete them.
    match /trainingModules/{trainingModuleId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // --- Rules for Applicants (Specific Path) ---
    // This rule applies ONLY to the direct path to an applicant document.
    match /trainingModules/{trainingModuleId}/applicants/{applicantId} {
      // Allows any authenticated user to create an application (submit the form).
      allow create: if isSignedIn();

      // Explicitly deny read, update, or delete on this specific path for clients.
      // This forces reads to be handled by the more general collection group rule below.
      allow read, update, delete: if false;
    }

    // --- Rules for Applicants (Collection Group) ---
    // This rule is essential for the admin dashboard. It allows a 'list' query
    // across all 'applicants' subcollections.
    match /{path=**}/applicants/{applicantId} {
      // Allows the admin to read (get, list) any applicant document.
      allow read: if isAdmin();
    }
  }
}
